<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.xuanhong.tryonglasses">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Try on glasses"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Animation.AppCompat.Dialog">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".models.view.MenuActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".models.view.ModelActivity"
            android:label="Try on Glasses"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ForgotID" />
        <activity android:name=".MainScreen" />
        <activity android:name=".EditProfile" />
        <activity android:name=".Carts" />
        <activity android:name=".Pictures" />
        <activity android:name=".GlassesGallery" />
        <activity android:name=".LoginByEmail"></activity>
    </application>

</manifest>